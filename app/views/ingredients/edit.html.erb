<% content_for :title, "Modifica ingrediente" %>
<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= content_for?(:title) ? yield(:title) : "Ingredienti in Frigorifero" %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="<%= asset_path('reset.css') %>" />
  <link rel="stylesheet" href="<%= asset_path('application.css') %>" />
</head>
<body>
  <header>
    <div class="navbar-container fixed-bottom">
      <div class="d-flex justify-content-center align-items-center">
        <div class="mb-3">
          <%= link_to root_path, class: "btn btn-home" do %>
            <i class="fas fa-home"></i>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <div class="mb-3">
          <%= link_to ingredients_path, class: "btn btn-navbar me-4" do %>
            <i class="fas fa-carrot"></i>
          <% end %>
        </div>
        <div class="mb-3">
          <%= link_to dishes_path, class: "btn btn-navbar me-4" do %>
            <i class="fas fa-utensils"></i>
          <% end %>
        </div>
        <div class="mb-3">
          <%= link_to tables_path, class: "btn btn-navbar me-4" do %>
            <i class="fas fa-chair"></i>
          <% end %>
        </div>
        <div class="mb-3">
          <%= link_to orders_path, class: "btn btn-navbar" do %>
            <i class="fas fa-receipt"></i>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <div class="mb-3">
          <%= link_to root_path, class: "btn btn-home" do %>
            <i class="fas fa-ellipsis-v"></i>
          <% end %>
        </div>
      </div>
    </div>
  </header>
  <main>
    <section class="container mt-5">
      <article>
        <h1 class="text-center mb-4">Modifica ingrediente</h1>
      </article>
      <article>
        <div>
          <%= render "form", ingredient: @ingredient %>
        </div>
      </article>
      <article>
        <div class="d-flex justify-content-center align-items-center mt-4">
          <%= link_to "<i class='fas fa-angle-left'></i> Indietro".html_safe, @ingredient, class: "btn btn-success me-2" %>
          <%= link_to "<i class='fas fa-angle-double-left'></i> Dispensa".html_safe, ingredients_path, class: "btn btn-success" %>
        </div>
      </article>
    </section>
  </main>
</body>
</html>
