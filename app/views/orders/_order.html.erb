<div id="<%= dom_id order %>" class="card show-all mb-3">
  <div class="card-header text-center">
    <h5 class="card-title mb-0 text-success">Tavolo: <%= order.table.number %></h5>
  </div>
  <div class="card-body d-flex flex-column">
    <div>
      <p class="fw-bold">Ordine: <%= order.id %></p>
    </div>
    <div class="mt-auto">
      <p class="fw-bold">Portate:</p>
      <% if order.dishes.any? %>
        <ul class="list-group list-group-flush mb-3">
          <% order.dishes.each do |dish| %>
            <li class="list-group-item"><%= dish.name %></li>
          <% end %>
        </ul>
      <% else %>
        <p>Nessuna portata.</p>
      <% end %>
    </div>
    <div class="mt-auto">
      <p class="fw-bold">Note:</p>
      <% if order.note.present? %>
    <%= order.note %>
  <% else %>
    Nessuna nota.
  <% end %>
    </div>
    
    <% if controller_name == 'orders' && action_name == 'index' %>
      <div class="d-flex justify-content-center align-items-center mt-3">
        <%= link_to "<i class='fas fa-info-circle'></i>".html_safe, order, class: "btn btn-info" %>
      </div>
    <% end %>
    
  </div>
</div>


