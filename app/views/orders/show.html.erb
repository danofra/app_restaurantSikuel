<% content_for :title, "Dettagli ordine" %>
<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= content_for?(:title) ? yield(:title) : "Dettagli ordine" %>  
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="<%= asset_path('reset.css') %>" />
  <link rel="stylesheet" href="<%= asset_path('application.css') %>" />
</head>
<body>
  <header>
    <div class="navbar-container fixed-bottom">
      <div class="d-flex justify-content-center align-items-center">
        <div class="mb-3">
          <%= link_to root_path, class: "btn btn-home" do %>
            <i class="fas fa-home"></i>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <div class="mb-3">
          <%= link_to ingredients_path, class: "btn btn-navbar me-4" do %>
            <i class="fas fa-carrot"></i>
          <% end %>
        </div>
        <div class="mb-3">
          <%= link_to dishes_path, class: "btn btn-navbar me-4" do %>
            <i class="fas fa-utensils"></i>
          <% end %>
        </div>
        <div class="mb-3">
          <%= link_to tables_path, class: "btn btn-navbar me-4" do %>
            <i class="fas fa-chair"></i>
          <% end %>
        </div>
        <div class="mb-3">
          <%= link_to orders_path, class: "btn btn-navbar" do %>
            <i class="fas fa-receipt"></i>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <div class="mb-3">
          <%= link_to root_path, class: "btn btn-home" do %>
            <i class="fas fa-ellipsis-v"></i>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <main>
    <section class="container mt-5">
      <article>
        <h1 class="text-center mb-4">Dettagli ordine</h1>
      </article>
      <article>
          <div class="row">
            <p style="color: green"><%= notice %></p>
          </div>
          <div>
            <%= render @order %>
          </div>
      </article>
      <article>
        <div class="d-flex justify-content-center align-items-center mt-4">
          <%= link_to "<i class='fas fa-pencil-alt'></i> Modifica".html_safe, edit_order_path(@order), class: "btn btn-success me-3" %>
          <%= button_to "<i class='fas fa-trash-alt'></i> Elimina".html_safe, @order, class: "btn btn-danger", method: :delete %>
        </div>
        <div class="d-flex justify-content-center align-items-center mt-4">
          <%= link_to "<i class='fas fa-angle-double-left'></i> Ordini".html_safe, orders_path, class: "btn btn-back" %>
        </div>
      </article>
    </section>
  </main>  
</body>
</html>
