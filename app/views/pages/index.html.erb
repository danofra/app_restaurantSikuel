    <title>Sikuel Restaurant</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./assets/reset.css" />
    <link rel="stylesheet" href="./assets/application.css" />
  </head>
  <body>
    <main>
      <section class="container mt-3 text-center">
        <article>
          <h1>Sikuel Restaurant</h1>
        </article>
      </section>
      <section class="container home mt-3 mb-3">
        <article
          class="button-container row justify-content-center align-items-center"
        >
          <div
            class="col-12 col-md-6 col-lg-3 mb-3 d-flex justify-content-center"
          >
            <a
              href="ingredients.html"
              class="btn btn-primary d-flex flex-column justify-content-evenly"
            >
              <i class="fas fa-carrot"></i>
              Dispensa
            </a>
          </div>
          <div
            class="col-12 col-md-6 col-lg-3 mb-3 d-flex justify-content-center"
          >
            <a
              href="dishes.html"
              class="btn btn-primary d-flex flex-column justify-content-evenly"
            >
              <i class="fas fa-utensils"></i> Inserisci portata
            </a>
          </div>
          <div
            class="col-12 col-md-6 col-lg-3 mb-3 d-flex justify-content-center"
          >
            <a
              href="tables.html"
              class="btn btn-primary d-flex flex-column justify-content-evenly"
            >
              <i class="fas fa-chair"></i> Tavoli
            </a>
          </div>
          <div
            class="col-12 col-md-6 col-lg-3 mb-3 d-flex justify-content-center"
          >
            <a
              href="orders.html"
              class="btn btn-primary d-flex flex-column justify-content-evenly"
            >
              <i class="fas fa-receipt"></i> Inserisci ordine
            </a>
          </div>
        </article>
      </section>
    </main>
    <footer class="mt-5">
      <p>
        Sikuel Restaurant <span id="currentYear"></span> - Powered by Liborio
