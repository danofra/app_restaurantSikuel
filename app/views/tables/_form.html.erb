<%= form_with(model: table, local: true) do |form| %>
  <% if table.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(table.errors.count, "error") %> prohibited this table from being saved:</h4>
      <ul>
        <% table.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :numero, class: "form-label" %>
    <%= form.text_field :number, class: "form-control", placeholder: "Numero tavolo" %>
  </div>

  <div class="mb-4 d-flex justify-content-center align-items-center">
    <label class="form-check-label me-3" for="availableCheckbox">
      Disponibile
    </label>
    <%= form.check_box :available, { class: "form-check-input", id: "availableCheckbox" } %>
  </div>

  <div>
    <div class="d-flex justify-content-center align-items-center">
    <button type="submit" class="btn btn-success d-flex align-items-center">
      <i class="fas fa-check-circle me-2"></i> Salva
    </button>
  </div>
  </div>
<% end %>


